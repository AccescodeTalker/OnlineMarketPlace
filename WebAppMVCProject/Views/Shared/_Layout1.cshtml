
<!DOCTYPE html>
<html>
    <head>
        <style>
.na
{
text-decoration:none;
color:white;

 }
.searchbar
{
    position: absolute;
    top: 20%;
    left: 18%;
}
        </style>
        <title>@Page.Title</title>
        @RenderSection("head", required: false)

        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <nav class="navbar navbar-inverse" style="">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"> Shope Name </a>
                </div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Category", "Index", "User", null, new { @class = "ht" })</li>
                    <li>
                        @if (Session["uid"] != null)
                        {
                            @Html.ActionLink("Post An Ad", "Ad", "User", null, new { @class = "ht" })

                        }
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["uid"] == null)
                        {

                            @Html.ActionLink("Log In", "login", "User", null, new { @class = "ht", })

                        }
                    </li>
                    <li>
                        @if (Session["uid"] == null)
                        {
                            @Html.ActionLink("Sign In", "SignIn", "User", null, new { @class = "ht" })
                        }
                        else
                        {
                            @Html.ActionLink("Sign Out", "Signout", "User", null, new { @class = "ht" })
                        }

                    <li>

                </ul>

            </div>



        </nav>

                @RenderBody()
                <script src="~/Scripts/bootstrap.min.js"></script>
                <script src="~/Scripts/bootstrap.js"></script>
    </body>
</html>
