@using PagedList.Mvc
@model PagedList.IPagedList<WebAppMVCProject.Models.category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    body {
        background-image: url('../../content/img/lime-2481358.jpg');
        background-size: cover;
    }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @if (TempData["msg"] !=null)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong>@TempData["msg"]
                </div>
            }

        </div>
        <div class="col-ig-2 col-md-2 col-sm-2">
            <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">
                <span class="btn btn-info">
                    @Html.ActionLink("Proceed to Checkout", "Checkout")
                </span>
            </h4>
        </div>

    </div>


    <div class="container" style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                @*<img src="<Add Banner> " style="width:100%; height:100%" />*@


            </div>

        </div>



        <div class="row" style="margin-bottom:40px">

            <div class="col-lg-2 col-md-2">
                @*<img src="<insert add>" class="img img-responsive" style="width:100%; height:100%" />*@
            </div>

            <div class="col-lg-8 col-md-8">
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                                <img src="@Url.Content(item.cimg)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.cName, "Ads", new { id = @item.cId })</h4>
                            </div>

                        }
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-2 col-md-2">
        @*<img src="<insert add>" class="img img-responsive" style="width:100%; height:100%" />*@
    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</body>
</html>

